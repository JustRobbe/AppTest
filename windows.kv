WindowManager:
	MainWindow:
	CodeWindow:

<MainWindow>:
	name: "main"

	FloatLayout:
		Button:
			text: "task"
			size_hint: 0.5,0.5
			pos_hint: {"x":0.25,"y":0.25}

			on_release: app.root.current = "codeWindow"

<CodeWindow>:
	name: "codeWindow"

	code: code
	inputcode: inputcode

	FloatLayout:

		pos: 0,root.height / 2
		size: root.width, root.height / 2

		GridLayout:
			cols:1

			size_hint: 1,0.5
			pos_hint:{"x":0, "y":0}

			Label:
				id: code
				text: ""
				font_size: 25
				bold: True

			Label:
				id: inputcode
				text: "6464"
				font_size: 25
				bold: True

	FloatLayout:

		GridLayout:
			size_hint : 0.7,0.7
			size_hint_y: None
			height: self.width
			
			pos: root.width * 0.15, root.width * 0.15
			cols:3

			Button:
				text: "1"
				on_release: root.btn1()

			Button:
				text: "2"
				on_release: root.btn2()

			Button:
				text: "3"
				on_release: root.btn3()

			Button:
				text: "4"
				on_release: root.btn4()

			Button:
				text: "5"
				on_release: root.btn5()

			Button:
				text: "6"
				on_release: root.btn6()

			Button:
				text: "7"
				on_release: root.btn7()

			Button:
				text: "8"
				on_release: root.btn8()

			Button:
				text: "9"
				on_release: root.btn9()